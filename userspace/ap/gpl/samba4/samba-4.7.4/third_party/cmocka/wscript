#!/usr/bin/env python

import Options

def configure(conf):
    conf.CHECK_FUNCS('longjmp siglongjmp')

    if conf.CHECK_CMOCKA():
        conf.define('USING_SYSTEM_CMOCKA', 1)

def build(bld):
    if bld.CONFIG_SET('USING_SYSTEM_CMOCKA'):
        return

    bld.SAMBA_LIBRARY('cmocka',
                      source='cmocka.c',
                      deps='rt',
                      allow_warnings=True,
                      private_library=True)
